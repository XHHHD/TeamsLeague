<Page x:Class="TeamsLeague.UI.WPF.Views.Pages.Menu.MiniPages.MiniPageForMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamsLeague.UI.WPF.Views.Pages.Menu.MiniPages"
      mc:Ignorable="d" 
      d:DesignHeight="120" d:DesignWidth="240"
      Title="MiniPageForMenu">

    <ToggleButton x:Name="TButton" Background="{x:Null}" BorderBrush="{x:Null}" Click="ToggleButton_Click">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image x:Name="TeamLogo" Grid.Row="0" Height="70" Width="70" Margin="3"
                   Source="/Resources/Img/Default/icons8-ос-free-bsd-100-white.png" />
            <TextBlock x:Name="TeamName" Text="Team Name" Grid.Row="1" FontSize="30" FontFamily="Arial Black"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
    </ToggleButton>
</Page>
