<Window x:Class="TeamsLeague.UI.WPF.Views.Windows.Selectors.TeamLogoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamsLeague.UI.WPF.Views.Windows.Selectors"
        mc:Ignorable="d"
        Title="TeamLogoWindow"
        Height="300" Width="450"
        Background="Transparent" AllowsTransparency="True"
        WindowStyle="None">
    <Border Background="CadetBlue" BorderBrush="#FF255663" CornerRadius="20" BorderThickness="5" Padding="7">
        <DockPanel>
            <Button x:Name="Back_Btn"
                    DockPanel.Dock="Bottom"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    MinHeight="50"
                    MinWidth="300"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Content="CANCEL"
                    FontWeight="Bold"
                    Click="Back_Btn_Click"/>

            <ScrollViewer x:Name="Images_Viewer"/>
        </DockPanel>
    </Border>
</Window>
